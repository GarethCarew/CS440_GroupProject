<!DOCTYPE html>
<html lang="en">
<head><title>Todo App</title>
    <link rel="stylesheet" type="text/css" href="/static/stylesheets/style.css"/>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sour+Gummy|Fuzzy+Bubbles|Playwrite+US+Modern">
</head>


<body>

<section class="container main-section w-100 p-5">

    <div class="card rounded-3 p-5">

        <p class="h2">To-Do List</p>

        <ul class="list-group w-100 border-0">
            <% data.forEach(function(task) { %>

                <div class="input-group w-100 py-1 <%- task._doc.complete ? 'completed' : ''%>" id="group_<%- task._doc._id %>">

                    <div class="input-group-text">
                        <input id="checkbox_<%- task._doc._id %>" class="form-check-input mt-0" type="checkbox" value="" <%- task._doc.complete ? 'checked' : ''%>
                        onClick='updateCheckbox("<%- task._doc._id %>", window.location.pathname)'>
                    </div>

                    <span id="static_text_<%- task._doc._id %>"
                          class="input-group-text form-control text-start static-text"><%- task._doc.name %></span>

                    <input id="edit_text_<%= task._doc._id %>" class="input-group-text form-control text-start d-none"
                           type="text" value="<%- task._doc.name %>" name="edit"/>

                    <a id="start_edit_button_<%= task._doc._id %>" class="btn border"
                       onclick='start_edit_item("<%- task._doc._id %>"); '><i class="bi-pencil"></i></a>

                    <a id="finish_edit_button_<%= task._doc._id %>" class="btn border d-none"
                       onclick='finish_edit_item("<%- task._doc._id %>", window.location.pathname);'><i class="bi-check-lg"></i></a>

                    <a id="cancel_edit_button_<%= task._doc._id %>" class="btn border d-none"
                       onclick='cancel_edit_item("<%- task._doc._id %>");'><i class="bi-x-lg"></i></a>

                    <a id="delete_button_<%= task._doc._id %>" class="btn border"
                       onclick='delete_item("<%- task._doc._id %>", window.location.pathname);'><i class="bi-trash"></i></a>

                    <a id="hidden_button_<%- task._doc._id %>" class="btn border d-none"></a>

                </div>

            <% }); %>
        </ul>

        <div class="w-100 py-5">
            <h5 class="new_item_header">Add a new item:</h5>
            <div class="input-group w-100 py-1">

                <input id="new_item_text" class="input-group-text form-control text-start" type="text" value=""
                       name="new_item_text"/>

                <a id="new_item_button" class="btn border" onclick='new_item(window.location.pathname);'><i class="bi-plus-lg"></i></a>

            </div>
        </div>


    </div>
</section>

<script src="/static/scripts/dynamic.js"></script>
<script src="/js/bootstrap.js"></script>

</body>
</html>